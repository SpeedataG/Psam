<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.spd.psam.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SPDPSAMDEMO"
            android:textColor="@color/blue_button"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_verson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:gravity="top"
            android:paddingBottom="5dp"
            android:text="V1.1"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_config"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/img_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableTop="@mipmap/reset"
            android:gravity="center"
            android:text="rest" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_edittext_focused">

            <TextView
                android:id="@+id/tv_show_message"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1_active"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="PSAM1"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn2_active"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="PSAM2"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_get_psam4442"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="PSAM4442"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_get_ramdon"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="RANDOM"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="CLEAR"
            android:textSize="18dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edv_adpu_cmd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit"
        android:digits="abcdef0123456789"
        android:hint="Please input apdu command:"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_send_adpu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="Send APDU"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_original_cmd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="OriginalCMD"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_4442_cmd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="4442CMD"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_change_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="ChangeBaud"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_OpenSerial"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="OpenSerial"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
